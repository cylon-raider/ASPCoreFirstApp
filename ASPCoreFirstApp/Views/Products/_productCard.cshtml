@model ASPCoreFirstApp.Models.ProductModel


<!--Below interprets as C# code-->
@{
    // get just the first word of the item.Name for searching purposes-->
    var s = @Model.Name;

    // ternary operator - look it up-->
    var firstWord = s.IndexOf(" ") > -1 ? s.Substring(0, s.IndexOf(" ")) : s;
}



<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="https://loremflickr.com/g/150/150/@firstWord?lock=@Model.Id" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => Model.Price)</p>
        <a href="/products/ShowOneProduct/@Model.Id" class="btn btn-primary">Show Details</a>
        <a href="/products/ShowEditForm/@Model.Id" class="btn btn-warning">Edit</a>
        <a href="/products/Delete/@Model.Id" class="btn btn-danger">Delete</a>
        <button value="@Model.Id" type="button" class="btn btn-primary edit-product-button" data-toggle="modal" data-target="#editModal">
            Modal Edit
        </button>
    </div>
</div>